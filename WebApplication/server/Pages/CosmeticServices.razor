@page "/cosmetic-services"
@layout MainLayout
@inherits WebApplication.Pages.CosmeticServicesComponent

@using Radzen
@using Radzen.Blazor
@using WebApplication.Models.LocalDb
<PageTitle>Cosmetic Services</PageTitle>
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Cosmetic Services">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenTextBox Placeholder="Search ..." style="display: block; margin-bottom: 10px; width: 100%" Name="Textbox0" @oninput="@(async(args) => {search = $"{args.Value}";await grid0.GoToPage(0);await Load();})">
        </RadzenTextBox>
        <RadzenDataGrid @ref="grid0" AllowFiltering="false" FilterMode="Radzen.FilterMode.Advanced" AllowPaging="true" AllowSorting="false" Data="@getCosmeticServicesResult" TItem="WebApplication.Models.LocalDb.CosmeticService" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenDataGridColumn TItem="WebApplication.Models.LocalDb.CosmeticService" Property="CreatedOn" FormatString="{0:dd.MM.yyyy}" Title="Created On">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="WebApplication.Models.LocalDb.CosmeticService" Property="Name" Title="Name">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="WebApplication.Models.LocalDb.CosmeticService" Property="UserModifierId" Title="User Modifier Id">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="WebApplication.Models.LocalDb.CosmeticService" Property="Description" Title="Description">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="WebApplication.Models.LocalDb.CosmeticService" Property="Id" Title="Id">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="WebApplication.Models.LocalDb.CosmeticService" Property="ExecuteTimeInMinutes" Title="Execute Time In Minutes">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="WebApplication.Models.LocalDb.CosmeticService" Property="UpdatedOn" FormatString="{0:dd.MM.yyyy}" Title="Updated On">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="WebApplication.Models.LocalDb.CosmeticService" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="webApplicationModelsLocalDbCosmeticService">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, webApplicationModelsLocalDbCosmeticService))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenDataGridColumn>
          </Columns>
        </RadzenDataGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
