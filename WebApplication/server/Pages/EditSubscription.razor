@page "/edit-subscription/{Id}"
@layout MainLayout
@inherits WebApplication.Pages.EditSubscriptionComponent

@using Radzen
@using Radzen.Blazor

<PageTitle>Edit Subscription</PageTitle>
<RadzenContent Container="main">
  <ChildContent>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm TItem="SubscriptionRequest" Data="@Subscription" Visible="@(Subscription != null)" Submit="@Form0Submit">
          <ChildContent>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Наименование" Component="Name" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox MaxLength="100" style="display: block; width: 100%" @bind-Value="@(Subscription.Name)" Name="Name">
                </RadzenTextBox>
                <RadzenRequiredValidator Component="Name" Text="Обязательное поле" style="position: absolute">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Активность" Component="LifeTimeInDays" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="width: 100%" @bind-Value="@(Subscription.LifeTimeInDays)" Name="LifeTimeInDays">
                </RadzenNumeric>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Стоимость" Component="Price" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(Subscription.Price)" Name="Price">
                </RadzenNumeric>
                <RadzenRequiredValidator Component="Price" Text="Обязательное поле" style="position: absolute">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div class="row">
              <div class="col offset-sm-3">
                <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" ButtonStyle="ButtonStyle.Primary">
                </RadzenButton>
                <RadzenButton ButtonStyle="ButtonStyle.Light" style="margin-left: 1rem" Text="Cancel" Click="@Button2Click">
                </RadzenButton>
              </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <RadzenHeading Size="H2" Text="Услуги" style="margin-top: 1rem; margin-left: 1rem">
                    </RadzenHeading>
                    <RadzenDataGrid AllowFiltering="false" FilterMode="Radzen.FilterMode.Advanced" AllowPaging="false" AllowSorting="false" Data="@Subscription.CosmeticServices" TItem="SubscriptionRequest.CosmeticServiceRequest">
                        <Columns>
                            <RadzenDataGridColumn TItem="SubscriptionRequest.CosmeticServiceRequest" Property="Name" Title="Услуга">
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="SubscriptionRequest.CosmeticServiceRequest" Property="Count" Title="Количество">
                            </RadzenDataGridColumn>
                        </Columns>
                    </RadzenDataGrid>
                </div>
            </div>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
